<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Material Circle Image style-->
    <style name="ShapeAppearanceOverlay.CircleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SmallTitleGrayBoldCenter">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/gray_700</item>
        <item name="android:textCursorDrawable">@drawable/searchview_cursor</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:tint">@color/gray_700</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@drawable/bg_white_rounded</item>
        <item name="submitBackground">@drawable/bg_white_rounded</item>
        <item name="android:background">@drawable/bg_white_rounded</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialButtonStyle">@color/purple_500</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_500</item>
        <item name="rippleColor">@color/purple_700</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_700</item>
        <item name="rippleColor">@color/gray_500</item>
    </style>

</resources>